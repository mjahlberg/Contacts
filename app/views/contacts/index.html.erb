<body class = "body-show">
<h1 class = "contact-header-index">List of Contacts</h1>
<div class = "newpersonbutton-index">
    <%= link_to contacts_new_path, class: "btn btn-primary" do %>
      New Person
    <% end %>
</div>
<div class="newcontact">

    <ul>
        <% @contacts.each do |b| %>
            <li class = "list">
              	<div class = "contact_name_index"><%= link_to b.name, contact_path(b) %></div>
              	<div class = "contact_company_index"><%= b.company %> </div>
                <div class = "contact_photo_index"><%= image_tag b.avatar.url %></div>
            </li>
        <% end %>
    </ul>
</div>
</body>



